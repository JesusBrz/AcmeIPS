<title>Registro</title>
<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Nombres %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "Nombres" %>
  </div>

  <div class="field">
    <%= f.label :Apellidos %><br />
    <%= f.text_field :surname, autofocus: true, autocomplete: "Apellidos" %>
  </div>

  <div class="field">
    <%= f.label :Documento_de_identidad %><br />
    <%= f.text_field :document, autofocus: true, autocomplete: "Documento de Identidad" %>
  </div>

  <div class="field">
    <%= f.label :Correo_Electrónico %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Correo Electrónico" %>
  </div>

  <div class="field">
    <%= f.label :Contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Contraseña" %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_contraseña%><br />
    <%= f.password_field :password_confirmation, autocomplete: "Confirmar Contraseña" %>
  </div>

  <div class="field">
    <%= f.label :Fecha_de_nacimiento %><br />
    <%= f.date_field :birthday, as: :date, value: f.object.try(:strftime,"%m/%d/%Y")%>
  </div>

  <div class="field">
    <%= f.label :Teléfono_móvil %><br />
    <%= f.number_field :phone, autofocus: true, autocomplete: "Teléfono Móvil" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
